//Faça um programa para calcular o estoque médio de uma peça, sendo que:
//estoqueMedio = (estoqueMin + estoqueMax) / 2. 

public class Program
{
	public static void Main()
	{
		int estoqueMin;
		int estoqueMax;

		Console.WriteLine("Insira o estoque mínimo");
		estoqueMin = Convert.ToInt32(Console.ReadLine());

		Console.WriteLine("Insira o estoque máximo");
		estoqueMax = Convert.ToInt32(Console.ReadLine());
		 while (estoqueMax <= estoqueMin)
		 {
		  Console.WriteLine("Insira o estoque máximo");
		  estoqueMax = Convert.ToInt32(Console.ReadLine());
		 }

		int estoqueMedio = (estoqueMin + estoqueMax)/2;
		Console.WriteLine("Estoque médio: " + estoqueMedio);
		
	}
}
